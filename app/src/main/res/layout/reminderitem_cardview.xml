<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/card_view_Layout"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    >

    <!-- A CardView that contains a TextView -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"

            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:elevation="100dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            card_view:cardCornerRadius="2dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/left_relative_Layout"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:id="@+id/TitleInCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TitleHgggjH"
                        android:textColor="#7f7f7f"
                        android:gravity="center_vertical"
                        android:textSize="24sp"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@+id/NumberofDaysLeftInCardView"
                        />

                    <TextView
                        android:id="@+id/NumberofDaysLeftInCardView"
                        android:gravity="end"
                        android:textColor="#7f7f7f"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/LocationInCardView"
                        android:gravity="bottom"
                        android:textColor="#7f7f7f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LocaTion"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:id="@+id/DaysLeftInCardView"
                        android:text="Days Left"
                        android:gravity="right"
                        android:textColor="#7f7f7f"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>


            </LinearLayout>




        </android.support.v7.widget.CardView>
    </LinearLayout>